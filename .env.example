# Telegram API credentials
# Get from https://my.telegram.org
TELEGRAM_API_ID=your_API_ID
TELEGRAM_API_HASH=your_API_HASH

# Session file name (optional, default is telegram_monitor)
TELEGRAM_SESSION=telegram_monitor

# List of groups/channels to monitor (comma separated)
# Supports @username or numeric ID format
# Example: @group1,@group2,-1001234567890
TARGET_CHATS=@example_group,-1001234567890

# Webhook URL - HTTP interface address to receive messages
WEBHOOK_URL=http://localhost:8080/webhook

# Log level (optional, default is INFO)
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
